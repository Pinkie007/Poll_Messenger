<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hsuser4.poll_messenger.Activities.Activities.Activities.PollsDisplayActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        local:cardPreventCornerOverlap="true"
        local:cardElevation="20dp"
        local:cardBackgroundColor="#FFFF"
        android:layout_marginTop="5dp"
        android:id="@+id/cv">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgnext"
        android:src="@drawable/next"
        android:background="@drawable/btnround"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="Poll question"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/tvquestion"
        android:textColor="#000000" />

    <TextView
        android:text="Poll title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtitle"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
